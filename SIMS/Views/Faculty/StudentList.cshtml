@model IEnumerable<SIMS.Models.Entities.Student>
@{
    ViewData["Title"] = "Student List";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold mb-0">
                <i class="fas fa-user-graduate text-primary"></i> Student List
            </h2>
            <p class="text-muted">Students enrolled in your courses</p>
        </div>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to Dashboard
        </a>
    </div>

    <!-- Filter -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body">
            <form asp-action="StudentList" method="get" class="row g-3">
                <div class="col-md-4">
                    <label class="form-label">Search</label>
                    <input type="text" name="searchString" value="@ViewBag.SearchString" class="form-control"
                        placeholder="Student ID, Name, Email...">
                </div>
                <div class="col-md-4">
                    <label class="form-label">Filter by Course</label>
                    <select name="courseId" class="form-select">
                        <option value="">-- All Courses --</option>
                        @foreach (var course in ViewBag.Courses as IEnumerable<SIMS.Models.Entities.Course>)
                        {
                            <option value="@course.CourseID" selected="@(course.CourseID == ViewBag.SelectedCourseId)">
                                @course.CourseCode - @course.CourseName
                            </option>
                        }
                    </select>
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="fas fa-search"></i> Search
                    </button>
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <a asp-action="StudentList" class="btn btn-secondary w-100">
                        <i class="fas fa-redo"></i> Reset
                    </a>
                </div>
            </form>
        </div>
    </div>

    <!-- Student Cards -->
    <div class="row">
        @if (Model.Any())
        {
            @foreach (var student in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-body">
                            <div class="d-flex align-items-start">
                                <div class="flex-shrink-0">
                                    <div class="bg-primary bg-opacity-10 rounded-circle p-3">
                                        <i class="fas fa-user-circle fa-3x text-primary"></i>
                                    </div>
                                </div>
                                <div class="flex-grow-1 ms-3">
                                    <h5 class="card-title mb-1">@student.User?.FullName</h5>
                                    <p class="text-muted mb-2">
                                        <i class="fas fa-id-card"></i> @student.StudentCode
                                    </p>

                                    <hr class="my-2">

                                    <p class="text-muted small mb-1">
                                        <i class="fas fa-graduation-cap"></i>
                                        @student.AcademicPrograms?.ProgramName
                                    </p>

                                    <p class="text-muted small mb-1">
                                        <i class="fas fa-envelope"></i>
                                        @student.User?.Email
                                    </p>

                                    <p class="text-muted small mb-2">
                                        <i class="fas fa-phone"></i>
                                        @(student.User?.Phone ?? "Not updated")
                                    </p>

                                    <div class="d-flex justify-content-between align-items-center mt-3">
                                        <div>
                                            <span class="badge bg-success">GPA: @student.GPA.ToString("F2")</span>
                                            <span class="badge bg-info">@student.TotalCredits TC</span>
                                        </div>
                                        <a asp-action="StudentDetails" asp-route-id="@student.StudentID"
                                            class="btn btn-sm btn-primary">
                                            <i class="fas fa-eye"></i> Details
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="card border-0 shadow-sm">
                    <div class="card-body text-center py-5">
                        <i class="fas fa-inbox fa-4x text-muted mb-3"></i>
                        <h5 class="text-muted">No students found</h5>
                        <p class="text-muted">Try changing the filter or search keyword</p>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="mt-3">
        <p class="text-muted">
            Total: <strong>@Model.Count()</strong> students
        </p>
    </div>
</div>