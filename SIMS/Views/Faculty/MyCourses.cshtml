@model IEnumerable<SIMS.Models.Entities.Course>
@{
    ViewData["Title"] = "Class List";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold mb-0">
                <i class="fas fa-list text-primary"></i> Class List
            </h2>
            <p class="text-muted">Classes you are currently teaching</p>
        </div>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to Dashboard
        </a>
    </div>

    <!-- Filter -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body">
            <form asp-action="MyCourses" method="get" class="row g-3">
                <div class="col-md-3">
                    <label class="form-label">Semester</label>
                    <select name="semester" class="form-select">
                        <option value="">-- All --</option>
                        @foreach (var sem in ViewBag.Semesters as string[])
                        {
                            <option value="@sem" selected="@(sem == ViewBag.SelectedSemester)">
                                Semester @sem
                            </option>
                        }
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label">Academic Year</label>
                    <select name="academicYear" class="form-select">
                        <option value="">-- All --</option>
                        @foreach (var year in ViewBag.AcademicYears as string[])
                        {
                            <option value="@year" selected="@(year == ViewBag.SelectedAcademicYear)">
                                @year
                            </option>
                        }
                    </select>
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="fas fa-filter"></i> Filter
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Course Cards -->
    <div class="row">
        @if (Model.Any())
        {
            @foreach (var course in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0">@course.CourseCode</h5>
                        </div>
                        <div class="card-body">
                            <h6 class="card-title">@course.CourseName</h6>

                            <hr>

                            <div class="mb-2">
                                <i class="fas fa-graduation-cap text-info"></i>
                                <strong>Credits:</strong> @course.Credits
                            </div>

                            <div class="mb-2">
                                <i class="fas fa-calendar text-warning"></i>
                                <strong>Semester:</strong> Sem @course.Semester - @course.AcademicYear
                            </div>

                            <div class="mb-2">
                                <i class="fas fa-clock text-primary"></i>
                                <strong>Schedule:</strong> @(course.Schedule ?? "Not scheduled")
                            </div>

                            <div class="mb-2">
                                <i class="fas fa-door-open text-success"></i>
                                <strong>Room:</strong> @(course.Room ?? "TBA")
                            </div>

                            <div class="mb-2">
                                <i class="fas fa-users text-danger"></i>
                                <strong>Students:</strong>
                                <span class="badge bg-success">
                                    @(course.Enrollments?.Count ?? 0)/@course.MaxStudents
                                </span>
                            </div>

                            @if (!string.IsNullOrEmpty(course.Description))
                            {
                                <hr>
                                <p class="text-muted small mb-0">
                                    @course.Description.Substring(0, Math.Min(100, course.Description.Length))...
                                </p>
                            }
                        </div>
                        <div class="card-footer bg-white border-top-0">
                            <div class="d-grid gap-2">
                                <a asp-action="CourseDetails" asp-route-id="@course.CourseID" class="btn btn-primary">
                                    <i class="fas fa-eye"></i> View Class Details
                                </a>
                                <a asp-action="ManageGrades" asp-route-courseId="@course.CourseID" class="btn btn-success">
                                    <i class="bi bi-clipboard-data"></i> Manage Grades
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="card border-0 shadow-sm">
                    <div class="card-body text-center py-5">
                        <i class="fas fa-inbox fa-4x text-muted mb-3"></i>
                        <h5 class="text-muted">No classes found</h5>
                        <p class="text-muted">Try changing the filter to search</p>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="mt-3">
        <p class="text-muted">Total: <strong>@Model.Count()</strong> classes</p>
    </div>
</div>