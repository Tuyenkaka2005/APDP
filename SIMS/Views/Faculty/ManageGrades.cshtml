@model SIMS.Models.ViewModels.CourseGradesViewModel
@{
    ViewData["Title"] = "Manage Grades - " + Model.CourseCode;
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-clipboard-data"></i> Manage Grades: @Model.CourseCode - @Model.CourseName
                    </h4>
                </div>
                <div class="card-body">
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show">
                            <i class="bi bi-check-circle"></i> @TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show">
                            <i class="bi bi-exclamation-triangle"></i> @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (!Model.Students.Any())
                    {
                        <div class="alert alert-info">
                            <i class="bi bi-info-circle"></i> No students enrolled in this course yet.
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Student Code</th>
                                        <th>Student Name</th>
                                        <th>Final Grade</th>
                                        <th>Letter Grade</th>
                                        <th>Status</th>
                                        <th>Grade Date</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var student in Model.Students)
                                    {
                                        <tr>
                                            <td><strong>@student.StudentCode</strong></td>
                                            <td>@student.StudentName</td>
                                            <td>
                                                @if (student.FinalGrade.HasValue)
                                                {
                                                    <span class="badge bg-primary">@student.FinalGrade.Value.ToString("F2")</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(student.LetterGrade))
                                                {
                                                    <span class="badge bg-info">@student.LetterGrade</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td>
                                                @if (student.GradeStatus == "Pending")
                                                {
                                                    <span class="badge bg-warning text-dark">@student.GradeStatus</span>
                                                }
                                                else if (student.GradeStatus == "Passed")
                                                {
                                                    <span class="badge bg-success">@student.GradeStatus</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger">@student.GradeStatus</span>
                                                }
                                            </td>
                                            <td>
                                                @if (student.GradeDate.HasValue)
                                                {
                                                    @student.GradeDate.Value.ToString("dd/MM/yyyy")
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td>
                                                <a asp-action="EnterGrade" asp-route-enrollmentId="@student.EnrollmentID"
                                                    class="btn btn-sm btn-primary">
                                                    <i class="bi bi-pencil"></i>
                                                    @(student.GradeID.HasValue ? "Edit" : "Enter") Grade
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }

                    <div class="mt-3">
                        <a asp-action="ManageGrades" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Back to Course Selection
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
