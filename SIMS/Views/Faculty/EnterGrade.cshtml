@model SIMS.Models.ViewModels.StudentGradeViewModel
@{
    ViewData["Title"] = "Enter Grade";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-pencil-square"></i>
                        @(Model.GradeID.HasValue ? "Edit" : "Enter") Grade
                    </h4>
                </div>
                <div class="card-body">
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show">
                            <i class="bi bi-exclamation-triangle"></i> @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <div class="mb-3 p-3 bg-light rounded">
                        <h5>Student Information</h5>
                        <div class="row">
                            <div class="col-md-6">
                                <strong>Student Code:</strong> @Model.StudentCode
                            </div>
                            <div class="col-md-6">
                                <strong>Student Name:</strong> @Model.StudentName
                            </div>
                        </div>
                        <div class="row mt-2">
                            <div class="col-md-6">
                                <strong>Course Code:</strong> @Model.CourseCode
                            </div>
                            <div class="col-md-6">
                                <strong>Course Name:</strong> @Model.CourseName
                            </div>
                        </div>
                    </div>

                    <form asp-action="EnterGrade" method="post">
                        <input type="hidden" asp-for="EnrollmentID" />
                        <input type="hidden" asp-for="StudentID" />
                        <input type="hidden" asp-for="CourseID" />
                        <input type="hidden" asp-for="GradeID" />

                        <div class="mb-3">
                            <label asp-for="FinalGrade" class="form-label">
                                <i class="bi bi-123"></i> Final Grade (0-100)
                            </label>
                            <input asp-for="FinalGrade" class="form-control" type="number" step="0.01" min="0" max="100"
                                placeholder="Enter grade (0-100)" />
                            <div class="form-text">Enter the numerical grade. Letter grade will be calculated
                                automatically.</div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="GradeStatus" class="form-label">
                                <i class="bi bi-check-circle"></i> Grade Status
                            </label>
                            <select asp-for="GradeStatus" class="form-select">
                                <option value="Pending">Pending</option>
                                <option value="Passed">Passed</option>
                                <option value="Failed">Failed</option>
                                <option value="Incomplete">Incomplete</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Comments" class="form-label">
                                <i class="bi bi-chat-left-text"></i> Comments (Optional)
                            </label>
                            <textarea asp-for="Comments" class="form-control" rows="3"
                                placeholder="Enter any comments about the student's performance..."></textarea>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="ManageGrades" asp-route-courseId="@Model.CourseID" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-save"></i> Save Grade
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
