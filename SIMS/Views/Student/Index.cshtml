@model IEnumerable<SIMS.Models.Entities.Student>
@{
    ViewData["Title"] = "Student Management";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-primary mb-0">
                <i class="bi bi-people-fill me-2"></i>Student Management
            </h2>
            <p class="text-muted mb-0">Student list and management</p>
        </div>
        <a asp-action="Create" class="btn btn-primary shadow-sm">
            <i class="bi bi-plus-lg me-1"></i> Add new
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm border-0" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show shadow-sm border-0" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Search & Filter Card -->
    <div class="card shadow-sm mb-4">
        <div class="card-body bg-light rounded-3">
            <form asp-action="Index" method="get" class="row g-3">
                <div class="col-md-4">
                    <label class="form-label fw-bold text-secondary small text-uppercase">Search</label>
                    <div class="input-group">
                        <span class="input-group-text bg-white border-end-0"><i class="bi bi-search text-muted"></i></span>
                        <input type="text" name="searchString" value="@ViewBag.SearchString"
                               class="form-control border-start-0 ps-0" placeholder="Student ID, Full Name, Email...">
                    </div>
                </div>
                <div class="col-md-3">
                    <label class="form-label fw-bold text-secondary small text-uppercase">Program</label>
                    <select name="programId" class="form-select">
                        <option value="">-- All --</option>
                        @foreach (var item in ViewBag.Programs as SelectList)
                        {
                            <option value="@item.Value" selected="@(item.Value == ViewBag.ProgramId?.ToString())">
                                @item.Text
                            </option>
                        }
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label fw-bold text-secondary small text-uppercase">Department</label>
                    <select name="departmentId" class="form-select">
                        <option value="">-- All --</option>
                        @foreach (var item in ViewBag.Departments as SelectList)
                        {
                            <option value="@item.Value" selected="@(item.Value == ViewBag.DepartmentId?.ToString())">
                                @item.Text
                            </option>
                        }
                    </select>
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">
                        Filter data
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Data Table Card -->
    <div class="card shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light text-secondary">
                        <tr>
                            <th class="ps-4">Student ID</th>
                            <th>Full Name</th>
                            <th>Email</th>
                            <th>Program</th>
                            <th class="text-center">GPA</th>
                            <th class="text-center">Credits</th>
                            <th class="text-center">Status</th>
                            <th class="text-end pe-4">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Any())
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="ps-4 fw-bold text-primary">@item.StudentCode</td>
                                    <td>
                                        <div class="d-flex flex-column">
                                            <span class="fw-bold">@item.User.FullName</span>
                                            <span class="text-muted small">@item.Department?.DepartmentName</span>
                                        </div>
                                    </td>
                                    <td class="text-muted">@item.User.Email</td>
                                    <td><span class="badge bg-light text-dark border">@item.AcademicPrograms?.ProgramName</span></td>
                                    <td class="text-center"><span class="fw-bold text-dark">@item.GPA.ToString("F2")</span></td>
                                    <td class="text-center text-muted">@item.TotalCredits</td>
                                    <td class="text-center">
                                        @if (item.Status == "Active")
                                        {
                                            <span class="badge bg-success-subtle text-success border border-success-subtle rounded-pill">Active</span>
                                        }
                                        else if (item.Status == "Graduated")
                                        {
                                            <span class="badge bg-primary-subtle text-primary border border-primary-subtle rounded-pill">Graduated</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary-subtle text-secondary border border-secondary-subtle rounded-pill">@item.Status</span>
                                        }
                                    </td>
                                    <td class="text-end pe-4">
                                        <div class="btn-group btn-group-sm">
                                            <a asp-action="Details" asp-route-id="@item.StudentID"
                                               class="btn btn-outline-secondary border-0" data-bs-toggle="tooltip" title="View details">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@item.StudentID"
                                               class="btn btn-outline-primary border-0" data-bs-toggle="tooltip" title="Edit">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a asp-action="AssignProgramCourses" asp-route-id="@item.StudentID"
                                               class="btn btn-outline-success border-0" data-bs-toggle="tooltip" title="Assign program courses">
                                                <i class="bi bi-journal-plus"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.StudentID"
                                               class="btn btn-outline-danger border-0" data-bs-toggle="tooltip" title="Delete">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="8" class="text-center text-muted py-5">
                                    <i class="bi bi-inbox fs-1 d-block mb-3 opacity-25"></i>
                                    No data found.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer bg-white border-top-0 py-3">
            <div class="d-flex justify-content-between align-items-center">
                <span class="text-muted small">Displaying <strong>@Model.Count()</strong> results</span>
                <!-- Pagination could go here -->
            </div>
        </div>
    </div>
</div>