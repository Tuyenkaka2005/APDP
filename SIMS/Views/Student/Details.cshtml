@model SIMS.Models.Entities.Student
@{
    ViewData["Title"] = "Student details";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-primary text-white py-3">
                    <h5 class="mb-0">
                        <i class="fas fa-user"></i> Personal information
                    </h5>
                </div>
                <div class="card-body">
                    <div class="text-center mb-3">
                        <div class="avatar-placeholder mx-auto"
                            style="width: 120px; height: 120px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                            <i class="fas fa-user fa-4x text-white"></i>
                        </div>
                        <h4 class="mt-3 mb-1">@Model.User.FullName</h4>
                        <p class="text-muted">@Model.StudentCode</p>
                    </div>

                    <hr>

                    <table class="table table-sm table-borderless">
                        <tr>
                            <td class="text-muted" style="width: 40%;">Email:</td>
                            <td><strong>@Model.User.Email</strong></td>
                        </tr>
                        <tr>
                            <td class="text-muted">Phone:</td>
                            <td><strong>@(Model.User.Phone ?? "Not updated")</strong></td>
                        </tr>
                        <tr>
                            <td class="text-muted">Date of birth:</td>
                            <td><strong>@(Model.User.DateOfBirth?.ToString("dd/MM/yyyy") ?? "Not updated")</strong></td>
                        </tr>
                        <tr>
                            <td class="text-muted">Address:</td>
                            <td><strong>@(Model.User.Address ?? "Not updated")</strong></td>
                        </tr>
                    </table>
                </div>
            </div>

            <div class="card border-0 shadow-sm">
                <div class="card-header bg-info text-white py-3">
                    <h5 class="mb-0">
                        <i class="fas fa-chart-line"></i> Academic results
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-6 border-end">
                            <h2 class="text-primary mb-0">@Model.GPA.ToString("F2")</h2>
                            <small class="text-muted">GPA</small>
                        </div>
                        <div class="col-6">
                            <h2 class="text-success mb-0">@Model.TotalCredits</h2>
                            <small class="text-muted">Credits</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-8">
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0">
                        <i class="fas fa-graduation-cap text-primary"></i> Academic information
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="text-muted small">Student code</label>
                            <p class="fw-bold">@Model.StudentCode</p>
                        </div>
                        <div class="col-md-6">
                            <label class="text-muted small">Admission date</label>
                            <p class="fw-bold">@(Model.AdmissionDate?.ToString("dd/MM/yyyy") ?? "Not updated")</p>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="text-muted small">Academic program</label>
                            <p class="fw-bold">@Model.AcademicPrograms?.ProgramName</p>
                        </div>
                        <div class="col-md-6">
                            <label class="text-muted small">Department</label>
                            <p class="fw-bold">@(Model.Department?.DepartmentName ?? "Not assigned")</p>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="text-muted small">Admission type</label>
                            <p class="fw-bold">@(Model.AdmissionType ?? "Not updated")</p>
                        </div>
                        <div class="col-md-6">
                            <label class="text-muted small">Status</label>
                            <p>
                                @if (Model.Status == "Active")
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else if (Model.Status == "Graduated")
                                {
                                    <span class="badge bg-primary">Graduated</span>
                                }
                                else if (Model.Status == "Suspended")
                                {
                                    <span class="badge bg-warning">Suspended</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">@Model.Status</span>
                                }
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0">
                        <i class="fas fa-book-open text-success"></i>Registered courses
                    </h5>
                </div>
                <div class="card-body">
                    @if (ViewBag.Enrollments != null &&
                    ((List<SIMS.Models.Entities.Enrollment>)ViewBag.Enrollments).Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Course code</th>
                                        <th>Course name</th>
                                        <th>Credits</th>
                                        <th>Semester</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var enrollment in (List<SIMS.Models.Entities.Enrollment>)ViewBag.Enrollments)
                                    {
                                        <tr>
                                            <td><strong>@enrollment.Course.CourseCode</strong></td>
                                            <td>@enrollment.Course.CourseName</td>
                                            <td>@enrollment.Course.Credits</td>
                                            <td>@enrollment.Semester @enrollment.AcademicYear</td>
                                            <td>
                                                @if (enrollment.Status == "Enrolled")
                                                {
                                                    <span class="badge bg-primary">Enrolled</span>
                                                }
                                                else if (enrollment.Status == "Completed")
                                                {
                                                    <span class="badge bg-success">Completed</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">@enrollment.Status</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted text-center py-4">
                            <i class="fas fa-inbox fa-3x mb-3 d-block"></i>
                            Not registered any courses
                        </p>
                    }
                </div>
            </div>

            <div class="mt-3 d-flex gap-2">
                <a asp-action="Edit" asp-route-id="@Model.StudentID" class="btn btn-warning">
                    <i class="fas fa-edit"></i> Edit
                </a>
                <a asp-action="Delete" asp-route-id="@Model.StudentID" class="btn btn-danger">
                    <i class="fas fa-trash"></i> Delete
                </a>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
            </div>
        </div>
    </div>
</div>