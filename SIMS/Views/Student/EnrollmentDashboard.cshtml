@model IEnumerable<SIMS.Models.Enrollment>
@{
    ViewData["Title"] = "Lớp học phần đã đăng ký";
}

<div class="container mt-5">
    <h2 class="text-primary mb-4"><i class="fas fa-list-alt"></i> Lớp học phần đã đăng ký</h2>

    <div class="table-responsive">
        <table class="table table-striped">
            <thead class="table-dark">
                <tr>
                    <th>Môn học</th>
                    <th>Giảng viên</th>
                    <th>Học kỳ</th>
                    <th>Phòng</th>
                    <th>Lịch học</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var e in Model)
                {
                    <tr>
                        <td>@e.Section.Course.CourseName (@e.Section.Course.CourseCode)</td>
                        <td>@(e.Section.Faculty?.User?.FullName ?? "Chưa có")</td>
                        <td>@e.Section.Semester @e.Section.AcademicYear</td>
                        <td>@e.Section.Room</td>
                        <td>@e.Section.Schedule</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>