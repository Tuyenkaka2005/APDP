@model SIMS.Models.Entities.Student
@{
    ViewData["Title"] = "Delete Student";
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-danger text-white py-3">
                    <h4 class="mb-0">
                        <i class="fas fa-exclamation-triangle"></i> Confirm deletion
                    </h4>
                </div>
                <div class="card-body p-4">
                    <div class="alert alert-danger">
                        <i class="fas fa-exclamation-circle"></i>
                        <strong>Warning!</strong> Are you sure you want to delete this student?
                        This action cannot be undone and will delete all related data.
                    </div>

                    <div class="card bg-light mb-4">
                        <div class="card-body">
                            <h5 class="card-title">Student Information</h5>
                            <table class="table table-sm table-borderless mb-0">
                                <tr>
                                    <td class="text-muted" style="width: 40%;">Student Code:</td>
                                    <td><strong>@Model.StudentCode</strong></td>
                                </tr>
                                <tr>
                                    <td class="text-muted">Full Name:</td>
                                    <td><strong>@Model.User.FullName</strong></td>
                                </tr>
                                <tr>
                                    <td class="text-muted">Email:</td>
                                    <td><strong>@Model.User.Email</strong></td>
                                </tr>
                                <tr>
                                    <td class="text-muted">Program:</td>
                                    <td><strong>@Model.AcademicPrograms?.ProgramName</strong></td>
                                </tr>
                                <tr>
                                    <td class="text-muted">Department:</td>
                                    <td><strong>@(Model.Department?.DepartmentName ?? "Not assigned")</strong></td>
                                </tr>
                                <tr>
                                    <td class="text-muted">GPA:</td>
                                    <td><strong>@Model.GPA.ToString("F2")</strong></td>
                                </tr>
                                <tr>
                                    <td class="text-muted">Credits:</td>
                                    <td><strong>@Model.TotalCredits</strong></td>
                                </tr>
                            </table>
                        </div>
                    </div>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="StudentID" />
                        <div class="d-flex justify-content-end gap-2">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-times"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash"></i> Confirm deletion
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>