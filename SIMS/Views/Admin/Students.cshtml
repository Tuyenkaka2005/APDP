@{
    ViewData["Title"] = "Student Management";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-users"></i> Student Management (@ViewBag.TotalStudents)</h2>
        <a asp-action="CreateStudent" class="btn btn-success"><i class="fas fa-plus"></i> Add Student</a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }

    <form method="get" class="mb-4">
        <div class="input-group" style="max-width:400px">
            <input type="text" name="search" value="@ViewBag.Search" class="form-control"
                placeholder="Search by Student ID, Full Name, Email...">
            <button class="btn btn-primary"><i class="fas fa-search"></i></button>
        </div>
    </form>

    <div class="table-responsive">
        <table class="table table-hover table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Student ID</th>
                    <th>Full Name</th>
                    <th>Email</th>
                    <th>Academic Program</th>
                    <th>Department</th>
                    <th>GPA</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var s in Model)
                {
                    <tr>
                        <td><strong>@s.StudentCode</strong></td>
                        <td>@s.User.FullName</td>
                        <td>@s.User.Email</td>
                        <td>@(s.AcademicPrograms?.ProgramName ?? "Not yet")</td>
                        <td>@(s.Department?.DepartmentName ?? "Not yet")</td>
                        <td><span class="badge bg-info">@s.GPA.ToString("F2")</span></td>
                        <td>
                            <a asp-action="EditStudent" asp-route-id="@s.StudentID" class="btn btn-sm btn-warning">Edit</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Phân trang -->
    <nav>
        <ul class="pagination justify-content-center">
            @for (int i = 1; i <= ViewBag.TotalPages; i++)
            {
                <li class="page-item @(i == ViewBag.Page ? "active" : "")">
                    <a class="page-link" asp-action="Students" asp-route-page="@i" asp-route-search="@ViewBag.Search">@i</a>
                </li>
            }
        </ul>
    </nav>
</div>