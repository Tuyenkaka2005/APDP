@{
    ViewData["Title"] = "Add New Student";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model SIMS.Models.Entities.Student

<div class="container py-4">
    <h2 class="mb-4">
        <i class="fas fa-user-plus"></i> Add New Student
    </h2>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }

    <div class="row">
        <div class="col-lg-8">
            <form asp-action="CreateStudent" method="post">
                <div class="card shadow">
                    <div class="card-header bg-primary text-white">
                        <h5>Login account information</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Username</label>
                                <input asp-for="User.Username" class="form-control" required />
                                <span asp-validation-for="User.Username" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Password</label>
                                <input type="password" name="password" class="form-control" required
                                    placeholder="Nhập mật khẩu (bắt buộc)" />
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card shadow mt-4">
                    <div class="card-header bg-success text-white">
                        <h5>Personal information</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Full name</label>
                                <input asp-for="User.FullName" class="form-control" required />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Email</label>
                                <input asp-for="User.Email" class="form-control" type="email" required />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Phone number</label>
                                <input asp-for="User.Phone" class="form-control" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Date of birth</label>
                                <input asp-for="User.DateOfBirth" class="form-control" type="date" />
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-bold">Address</label>
                            <textarea asp-for="User.Address" class="form-control" rows="2"></textarea>
                        </div>
                    </div>
                </div>

                <div class="card shadow mt-4">
                    <div class="card-header bg-info text-white">
                        <h5>Education information</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Student code (MSSV)</label>
                                <input asp-for="StudentCode" class="form-control text-uppercase" required
                                    placeholder="VD: 2021001" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Academic program</label>
                                <select asp-for="ProgramID" class="form-select" required>
                                    <option value="">-- Select program --</option>
                                    @if (ViewBag.AcademicPrograms != null)
                                    {
                                        @foreach (var p in ViewBag.AcademicPrograms)
                                        {
                                            <option value="@p.ProgramID">@p.ProgramCode - @p.ProgramName</option>
                                        }
                                    }
                                </select>
                                <span asp-validation-for="ProgramID" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Department</label>
                                <select asp-for="DepartmentID" class="form-select">
                                    <option value="">-- Not required --</option>
                                    @if (ViewBag.Departments != null)
                                    {
                                        @foreach (var d in ViewBag.Departments)
                                        {
                                            <option value="@d.DepartmentID">@d.DepartmentName</option>
                                        }
                                    }
                                </select>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Admission date</label>
                                <input asp-for="AdmissionDate" class="form-control" type="date" />
                            </div>
                        </div>
                    </div>
                </div>

                <div class="mt-4 text-center">
                    <button type="submit" class="btn btn-success btn-lg px-5">
                        <i class="fas fa-save"></i> Save student
                    </button>
                    <a asp-action="Students" class="btn btn-secondary btn-lg px-5">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>