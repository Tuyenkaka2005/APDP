@model SIMS.Models.Entities.Faculty
@{
    ViewData["Title"] = "Faculty details";
}

<div class="container py-4">
    <div class="row">
        <!-- Sidebar Info -->
        <div class="col-lg-4">
            <!-- Profile Card -->
            <div class="card shadow-sm border-0 mb-4 h-100">
                <div class="card-header bg-primary text-white py-3">
                    <h5 class="mb-0 fw-bold">
                        <i class="bi bi-person-fill me-2"></i>Personal information
                    </h5>
                </div>
                <div class="card-body">
                    <div class="text-center mb-4 pt-3">
                        <div class="avatar-placeholder mx-auto shadow-sm" style="width: 120px; height: 120px; background: linear-gradient(135deg, #0d6efd 0%, #0dcaf0 100%); border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                            <i class="bi bi-person-video3 fs-1 text-white"></i>
                        </div>
                        <h4 class="mt-3 mb-1 fw-bold">@Model.User.FullName</h4>
                        <p class="text-muted small mb-2"><i class="bi bi-upc-scan me-1"></i>@Model.EmployeeCode</p>
                        @if (!string.IsNullOrEmpty(Model.Qualification))
                        {
                            <span class="badge bg-primary-subtle text-primary border border-primary-subtle rounded-pill">@Model.Qualification</span>
                        }
                    </div>

                    <hr class="text-muted opacity-25">

                    <ul class="list-group list-group-flush">
                        <li class="list-group-item px-0 d-flex justify-content-between align-items-center border-bottom-0 py-2">
                            <span class="text-muted small"><i class="bi bi-envelope me-2"></i>Email</span>
                            <span class="fw-bold text-dark">@Model.User.Email</span>
                        </li>
                        <li class="list-group-item px-0 d-flex justify-content-between align-items-center border-bottom-0 py-2">
                            <span class="text-muted small"><i class="bi bi-telephone me-2"></i>Phone</span>
                            <span class="fw-bold text-dark">@(Model.User.Phone ?? "---")</span>
                        </li>
                        <li class="list-group-item px-0 d-flex justify-content-between align-items-center border-bottom-0 py-2">
                            <span class="text-muted small"><i class="bi bi-cake2 me-2"></i>Birthdate</span>
                            <span class="fw-bold text-dark">@(Model.User.DateOfBirth?.ToString("dd/MM/yyyy") ?? "---")</span>
                        </li>
                    </ul>
                    <div class="mt-2 text-muted small">
                        <i class="bi bi-geo-alt me-1"></i> @(Model.User.Address ?? "Not updated address")
                    </div>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="col-lg-8">
            <!-- Job Info -->
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-white py-3 border-bottom-0">
                    <h5 class="mb-0 fw-bold text-primary">
                        <i class="bi bi-briefcase me-2"></i>Job information & Specialization
                    </h5>
                </div>
                <div class="card-body pt-0">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="p-3 bg-light rounded-3 h-100">
                                <label class="text-muted x-small text-uppercase fw-bold">Department</label>
                                <p class="mb-0 fw-bold text-dark">@(Model.Department?.DepartmentName ?? "Not assigned")</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="p-3 bg-light rounded-3 h-100">
                                <label class="text-muted x-small text-uppercase fw-bold">Position</label>
                                <p class="mb-0 fw-bold text-dark">@(Model.Position ?? "---")</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="p-3 bg-light rounded-3 h-100">
                                <label class="text-muted x-small text-uppercase fw-bold">Specialization</label>
                                <p class="mb-0 fw-bold text-dark">@(Model.Specialization ?? "---")</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="p-3 bg-light rounded-3 h-100">
                                <label class="text-muted x-small text-uppercase fw-bold">Office location</label>
                                <p class="mb-0 fw-bold text-dark">@(Model.OfficeLocation ?? "---")</p>
                            </div>
                        </div>
                         <div class="col-md-6">
                            <div class="p-3 bg-light rounded-3 h-100">
                                <label class="text-muted x-small text-uppercase fw-bold">Hire date</label>
                                <p class="mb-0 fw-bold text-dark">@(Model.HireDate?.ToString("dd/MM/yyyy") ?? "---")</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Teaching Info -->
            <div class="card shadow-sm border-0">
                <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
                    <h5 class="mb-0 fw-bold text-primary">
                        <i class="bi bi-journal-bookmark-fill me-2"></i>Teaching subjects
                    </h5>
                    @if (ViewBag.Courses != null && ((List<SIMS.Models.Entities.Course>)ViewBag.Courses).Any())
                    {
                        <span class="badge bg-primary rounded-pill">@((List<SIMS.Models.Entities.Course>)ViewBag.Courses).Count subjects</span>
                    }
                </div>
                <div class="card-body p-0">
                    @if (ViewBag.Courses != null && ((List<SIMS.Models.Entities.Course>)ViewBag.Courses).Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover align-middle mb-0">
                                <thead class="bg-light text-secondary">
                                    <tr>
                                        <th class="ps-4">Course ID</th>
                                        <th>Course name</th>
                                        <th class="text-center">Credit</th>
                                        <th>Semester</th>
                                        <th>Academic year</th>
                                        <th>Room</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var course in (List<SIMS.Models.Entities.Course>)ViewBag.Courses)
                                    {
                                        <tr>
                                            <td class="ps-4 fw-bold text-primary">@course.CourseCode</td>
                                            <td class="fw-bold">@course.CourseName</td>
                                            <td class="text-center"><span class="badge bg-light text-dark border">@course.Credits</span></td>
                                            <td>@course.Semester</td>
                                            <td>@course.AcademicYear</td>
                                            <td>
                                                 @if(!string.IsNullOrEmpty(course.Room))
                                                 {
                                                     <span class="badge bg-secondary-subtle text-secondary border border-secondary-subtle">@course.Room</span>
                                                 }
                                                 else
                                                 {
                                                     <span class="text-muted small">TBA</span>
                                                 }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-journal-x fs-1 text-muted opacity-25 mb-3 d-block"></i>
                            <p class="text-muted mb-0">Not assigned any courses</p>
                        </div>
                    }
                </div>
            </div>

            <div class="mt-4 d-flex gap-2">
                <a asp-action="Edit" asp-route-id="@Model.FacultyID" class="btn btn-primary shadow-sm">
                    <i class="bi bi-pencil-square me-1"></i> Edit
                </a>
                <a asp-action="Delete" asp-route-id="@Model.FacultyID" class="btn btn-danger shadow-sm">
                    <i class="bi bi-trash3 me-1"></i> Delete
                </a>
                <a asp-action="Index" class="btn btn-secondary shadow-sm">
                    <i class="bi bi-arrow-left me-1"></i> Back
                </a>
            </div>
        </div>
    </div>
</div>