@model SIMS.Models.Entities.Faculty
@{
    ViewData["Title"] = "Delete Faculty";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow border-0">
                <div class="card-header bg-danger text-white py-3">
                    <h5 class="mb-0 fw-bold">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>Confirm delete faculty
                    </h5>
                </div>
                <div class="card-body p-4">
                    <div class="alert alert-danger shadow-sm border-0 mb-4">
                        <div class="d-flex">
                            <i class="bi bi-exclamation-circle-fill fs-4 me-3"></i>
                            <div>
                                <h5 class="alert-heading fw-bold">Warning!</h5>
                                <p class="mb-0">You are performing the action of permanently deleting this faculty. This action cannot be undone.</p>
                            </div>
                        </div>
                    </div>

                    @if (ViewBag.CourseCount > 0)
                    {
                        <div class="alert alert-warning shadow-sm border-0 mb-4">
                            <i class="bi bi-cone-striped me-2"></i>
                            <strong>Note:</strong> This faculty is currently responsible for <strong>@ViewBag.CourseCount courses</strong>.
                            The system requires removing the faculty's assignment from these courses before deleting.
                        </div>
                    }

                    <div class="card bg-light border-0 mb-4 rounded-3">
                        <div class="card-body">
                            <h6 class="card-title fw-bold text-secondary text-uppercase mb-3"><i class="bi bi-person-lines-fill me-1"></i> Faculty information</h6>
                            <table class="table table-sm table-borderless mb-0">
                                <tr>
                                    <td class="text-muted" style="width: 35%;">Faculty code:</td>
                                    <td><strong>@Model.EmployeeCode</strong></td>
                                </tr>
                                <tr>
                                    <td class="text-muted">Full name:</td>
                                    <td><strong>@Model.User.FullName</strong></td>
                                </tr>
                                <tr>
                                    <td class="text-muted">Email:</td>
                                    <td><strong>@Model.User.Email</strong></td>
                                </tr>
                                <tr>
                                    <td class="text-muted">Department:</td>
                                    <td><strong>@(Model.Department?.DepartmentName ?? "Chưa phân công")</strong></td>
                                </tr>
                                <tr>
                                    <td class="text-muted">Qualification:</td>
                                    <td><strong>@(Model.Qualification ?? "Chưa cập nhật")</strong></td>
                                </tr>
                            </table>
                        </div>
                    </div>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="FacultyID" />
                        <div class="d-flex justify-content-end gap-2">
                            <a asp-action="Index" class="btn btn-secondary shadow-sm">
                                <i class="bi bi-x-lg me-1"></i> Cancel
                            </a>
                            @if (ViewBag.CourseCount == 0)
                            {
                                <button type="submit" class="btn btn-danger shadow-sm">
                                    <i class="bi bi-trash3-fill me-1"></i> Confirm delete
                                </button>
                            }
                            else
                            {
                                <button type="button" class="btn btn-danger opacity-50 cursor-not-allowed" disabled>
                                    <i class="bi bi-slash-circle me-1"></i> Cannot delete
                                </button>
                            }
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>