@model SIMS.Models.ViewModels.CreateFacultyViewModel
@{
    ViewData["Title"] = "Add new instructors";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white py-3">
                    <h5 class="mb-0 fw-bold">
                        <i class="bi bi-person-plus-fill me-2"></i>Add new instructors
                    </h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger shadow-sm border-0 mb-4">
                        </div>

                        <!-- Account Info Section -->
                        <h6 class="text-primary fw-bold text-uppercase border-bottom pb-2 mb-4">
                            <i class="bi bi-person-circle me-1"></i> Account information
                        </h6>

                        <div class="row g-3 mb-4">
                            <div class="col-md-6">
                                <label asp-for="Username"
                                    class="form-label fw-bold text-secondary normal">Username</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light text-muted"><i
                                            class="bi bi-person"></i></span>
                                    <input asp-for="Username" class="form-control" placeholder="Enter username..." />
                                </div>
                                <span asp-validation-for="Username" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Password"
                                    class="form-label fw-bold text-secondary normal">Password</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light text-muted"><i class="bi bi-key"></i></span>
                                    <input asp-for="Password" class="form-control" placeholder="Enter password..." />
                                </div>
                                <span asp-validation-for="Password" class="text-danger small"></span>
                                <small class="text-muted d-block mt-1"><i class="bi bi-info-circle me-1"></i>Minimum 6
                                    characters</small>
                            </div>
                        </div>

                        <div class="row g-3 mb-4">
                            <div class="col-md-6">
                                <label asp-for="Email" class="form-label fw-bold text-secondary normal">Email</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light text-muted"><i
                                            class="bi bi-envelope"></i></span>
                                    <input asp-for="Email" class="form-control" type="email"
                                        placeholder="example@sims.edu.vn" />
                                </div>
                                <span asp-validation-for="Email" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Phone" class="form-label fw-bold text-secondary normal">Phone
                                    number</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light text-muted"><i
                                            class="bi bi-telephone"></i></span>
                                    <input asp-for="Phone" class="form-control" placeholder="09xxxxxxxxx" />
                                </div>
                                <span asp-validation-for="Phone" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row g-3 mb-4">
                            <div class="col-md-6">
                                <label asp-for="FullName" class="form-label fw-bold text-secondary normal">Full
                                    name</label>
                                <input asp-for="FullName" class="form-control" placeholder="Enter full name..." />
                                <span asp-validation-for="FullName" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="DateOfBirth" class="form-label fw-bold text-secondary normal">Date of
                                    birth</label>
                                <input asp-for="DateOfBirth" class="form-control" type="date" />
                                <span asp-validation-for="DateOfBirth" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mb-5">
                            <label asp-for="Address" class="form-label fw-bold text-secondary normal">Address</label>
                            <textarea asp-for="Address" class="form-control" rows="2"
                                placeholder="Enter address..."></textarea>
                            <span asp-validation-for="Address" class="text-danger small"></span>
                        </div>

                        <!-- Professional Info Section -->
                        <h6 class="text-primary fw-bold text-uppercase border-bottom pb-2 mb-4">
                            <i class="bi bi-briefcase me-1"></i> Lecturer information
                        </h6>

                        <div class="row g-3 mb-4">
                            <div class="col-md-4">
                                <label asp-for="EmployeeCode" class="form-label fw-bold text-secondary normal">Employee
                                    code</label>
                                <input asp-for="EmployeeCode" class="form-control" placeholder="GVxxxx" />
                                <span asp-validation-for="EmployeeCode" class="text-danger small"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="HireDate" class="form-label fw-bold text-secondary normal">Hire
                                    date</label>
                                <input asp-for="HireDate" class="form-control" type="date" />
                                <span asp-validation-for="HireDate" class="text-danger small"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="Qualification"
                                    class="form-label fw-bold text-secondary normal">Qualification</label>
                                <select asp-for="Qualification" class="form-select">
                                    <option value="">-- Select qualification --</option>
                                    <option value="PhD">PhD</option>
                                    <option value="Master">Master</option>
                                    <option value="Engineer">Engineer</option>
                                    <option value="Bachelor">Bachelor</option>
                                </select>
                                <span asp-validation-for="Qualification" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row g-3 mb-4">
                            <div class="col-md-4">
                                <label asp-for="Specialization"
                                    class="form-label fw-bold text-secondary normal">Specialization</label>
                                <input asp-for="Specialization" class="form-control"
                                    placeholder="IT, Network, Software..." />
                                <span asp-validation-for="Specialization" class="text-danger small"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="Position"
                                    class="form-label fw-bold text-secondary normal">Position</label>
                                <select asp-for="Position" class="form-select">
                                    <option value="">-- Select position --</option>
                                    <option value="Lecturer">Lecturer</option>
                                    <option value="Senior Lecturer">Senior Lecturer</option>
                                    <option value="Associate Professor">Associate Professor</option>
                                    <option value="Professor">Professor</option>
                                    <option value="Department Head">Department Head</option>
                                    <option value="Deputy Head of Department">Deputy Head of Department</option>
                                </select>
                                <span asp-validation-for="Position" class="text-danger small"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="DepartmentID"
                                    class="form-label fw-bold text-secondary normal">Department</label>
                                <select asp-for="DepartmentID" class="form-select" asp-items="ViewBag.Departments">
                                    <option value="">-- Select department --</option>
                                </select>
                                <span asp-validation-for="DepartmentID" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="OfficeLocation" class="form-label fw-bold text-secondary normal">Office
                                location</label>
                            <input asp-for="OfficeLocation" class="form-control"
                                placeholder="VD: Room A101, Building B..." />
                            <span asp-validation-for="OfficeLocation" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-end gap-2 mt-5">
                            <a asp-action="Index" class="btn btn-secondary shadow-sm">
                                <i class="bi bi-x-lg me-1"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-primary shadow-sm">
                                <i class="bi bi-check-lg me-1"></i> Save information
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}