@{
    ViewData["Title"] = "Trang chủ - SIMS";
}

<!-- Hero Section -->
<div class="bg-primary text-white py-5">
    <div class="container text-center">
        <h1 class="display-4 fw-bold">SIMS</h1>
        <p class="lead fs-3">Student Information Management System</p>
        <p class="fs-5">Hệ thống quản lý thông tin sinh viên hiện đại</p>
        <div class="mt-4">
            @if (!User.Identity.IsAuthenticated)
            {
                <a asp-area="" asp-controller="Account" asp-action="Login" class="btn btn-light btn-lg me-3">
                    <i class="fas fa-sign-in-alt"></i> Đăng nhập
                </a>
                <a asp-area="" asp-controller="Account" asp-action="Register" class="btn btn-outline-light btn-lg">
                    <i class="fas fa-user-plus"></i> Đăng ký
                </a>
            }
            else
            {
                <div class="d-flex justify-content-center gap-3 flex-wrap">
                    <a asp-controller="Student" asp-action="Dashboard" class="btn btn-light btn-lg">
                        <i class="fas fa-tachometer-alt"></i> Vào hệ thống
                    </a>

                    <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-outline-danger btn-lg">
                            <i class="fas fa-sign-out-alt"></i> Đăng xuất
                        </button>
                    </form>
                </div>

                <div class="mt-3">
                    <small class="text-white-50">
                        Đã đăng nhập với tài khoản: <strong>@User.Identity.Name</strong>
                    </small>
                </div>
            }
        </div>
    </div>
</div>

<!-- Features -->
<div class="container my-5">
    <div class="row text-center">
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body">
                    <i class="fas fa-user-graduate fa-3x text-primary mb-3"></i>
                    <h5>Sinh viên</h5>
                    <p>Đăng ký học phần, xem điểm, tính GPA tự động</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body">
                    <i class="fas fa-chalkboard-teacher fa-3x text-success mb-3"></i>
                    <h5>Giảng viên</h5>
                    <p>Quản lý lớp học phần, nhập điểm sinh viên</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body">
                    <i class="fas fa-user-shield fa-3x text-danger mb-3"></i>
                    <h5>Quản trị viên</h5>
                    <p>Quản lý toàn bộ hệ thống, người dùng, môn học</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Footer -->
<footer class="bg-dark text-white text-center py-4 mt-5">
    <p>© 2025 SIMS - Đồ án môn Lập trình Hướng đối tượng</p>
    <p>Nhóm thực hiện: [Tên bạn và nhóm] - Lớp: [Mã lớp]</p>
</footer>