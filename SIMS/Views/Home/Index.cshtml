@{
    ViewData["Title"] = "SIMS - Hệ thống Quản lý Sinh viên";
}

<!-- Hero Section - Fullscreen -->
<div class="min-vh-100 d-flex align-items-center bg-gradient-primary">
    <div class="container">
        <div class="row justify-content-center text-center text-white">
            <div class="col-lg-10">
                <h1 class="display-3 fw-bold mb-3">
                    <i class="fas fa-university me-3"></i>SIMS
                </h1>
                <h2 class="display-6 fw-light mb-4">Student Information Management System</h2>
                <p class="lead mb-5">Hệ thống quản lý thông tin sinh viên hiện đại – An toàn – Dễ sử dụng</p>

                @if (!User.Identity.IsAuthenticated)
                {
                    <div class="d-flex flex-column flex-sm-row gap-3 justify-content-center">
                        <a asp-controller="Account" asp-action="Login"
                           class="btn btn-light btn-lg px-5 py-3 shadow-lg">
                            <i class="fas fa-sign-in-alt me-2"></i> Đăng nhập
                        </a>
                        <a asp-controller="Account" asp-action="Register"
                           class="btn btn-outline-light btn-lg px-5 py-3 shadow-lg">
                            <i class="fas fa-user-plus me-2"></i> Đăng ký tài khoản
                        </a>
                    </div>
                }
                else
                {
                    <div class="d-flex flex-column flex-sm-row gap-4 justify-content-center">
                        <a asp-controller="Dashboard" asp-action="Index"
                           class="btn btn-light btn-lg px-5 py-3 shadow-lg">
                            <i class="fas fa-tachometer-alt me-2"></i> Vào hệ thống
                        </a>
                        <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-outline-danger btn-lg px-5 py-3 shadow-lg">
                                <i class="fas fa-sign-out-alt me-2"></i> Đăng xuất
                            </button>
                        </form>
                    </div>
                    <p class="mt-4 fs-5 opacity-90">
                        Chào mừng <strong>@User.Identity.Name</strong> quay lại!
                    </p>
                }
            </div>
        </div>
    </div>
</div>

<!-- Features -->
<div class="container my-5 py-5">
    <div class="row g-5 text-center">
        <div class="col-md-4">
            <div class="feature-icon bg-primary text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-4"
                 style="width: 80px; height: 80px;">
                <i class="fas fa-user-graduate fa-2x"></i>
            </div>
            <h4 class="fw-bold">Sinh viên</h4>
            <p class="text-muted">Đăng ký học phần, theo dõi điểm số, xem bảng điểm, tính GPA tự động</p>
        </div>
        <div class="col-md-4">
            <div class="feature-icon bg-success text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-4"
                 style="width: 80px; height: 80px;">
                <i class="fas fa-chalkboard-teacher fa-2x"></i>
            </div>
            <h4 class="fw-bold">Giảng viên</h4>
            <p class="text-muted">Quản lý lớp học phần, nhập điểm, theo dõi sĩ số, xuất danh sách</p>
        </div>
        <div class="col-md-4">
            <div class="feature-icon bg-danger text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-4"
                 style="width: 80px; height: 80px;">
                <i class="fas fa-user-shield fa-2x"></i>
            </div>
            <h4 class="fw-bold">Quản trị viên</h4>
            <p class="text-muted">Quản lý toàn bộ hệ thống: người dùng, môn học, lớp học phần</p>
        </div>
    </div>
</div>

<!-- Footer -->
<footer class="bg-dark text-white py-5">
    <div class="container text-center">
        <p class="mb-1">&copy; 2025 SIMS - Đồ án Lập trình Hướng đối tượng</p>
        <p class="mb-0 small">Nhóm thực hiện: [Tên nhóm bạn] – Lớp: [Mã lớp]</p>
    </div>
</footer>

<style>
    .bg-gradient-primary {
        background: linear-gradient(135deg, #0d6efd 0%, #0b5ed7 100%);
    }
    .feature-icon {
        box-shadow: 0 10px 20px rgba(0,0,0,0.1);
    }
</style>