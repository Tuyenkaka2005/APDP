@model SIMS.Models.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Đăng ký - SIMS";
}

<div class="min-vh-100 d-flex align-items-center bg-light">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
                    <div class="card-header bg-success text-white text-center py-4">
                        <h3 class="mb-0"><i class="fas fa-user-plus me-2"></i> Đăng ký tài khoản SIMS</h3>
                    </div>
                    <div class="card-body p-5">
                        <form asp-action="Register" method="post">
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                            <div class="row">
                                <div class="col-md-12 mb-4">
                                    <label asp-for="FullName" class="form-label fw-semibold">Họ và tên</label>
                                    <input asp-for="FullName" class="form-control form-control-lg" placeholder="Nguyễn Văn A" />
                                    <span asp-validation-for="FullName" class="text-danger"></span>
                                </div>

                                <div class="col-md-12 mb-4">
                                    <label asp-for="Email" class="form-label fw-semibold">Email</label>
                                    <input asp-for="Email" class="form-control form-control-lg" placeholder="abc@sinhvien.edu.vn" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>

                                <div class="col-md-6 mb-4">
                                    <label asp-for="Password" class="form-label fw-semibold">Mật khẩu</label>
                                    <input asp-for="Password" class="form-control form-control-lg" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>

                                <div class="col-md-6 mb-4">
                                    <label asp-for="ConfirmPassword" class="form-label fw-semibold">Nhập lại mật khẩu</label>
                                    <input asp-for="ConfirmPassword" class="form-control form-control-lg" />
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>
                            </div>

                            <button type="submit" class="btn btn-success btn-lg w-100">
                                <i class="fas fa-user-check me-2"></i> Tạo tài khoản
                            </button>
                        </form>

                        <div class="text-center mt-4">
                            <p>Đã có tài khoản? <a asp-action="Login" class="text-success fw-bold">Đăng nhập</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>