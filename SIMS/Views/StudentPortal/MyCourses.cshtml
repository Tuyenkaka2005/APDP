@model IEnumerable<SIMS.Models.Entities.Enrollment>
@{
    ViewData["Title"] = "My Courses";
}

<div class="container-fluid">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Home</a></li>
            <li class="breadcrumb-item active">My Courses</li>
        </ol>
    </nav>

    <!-- Header -->
    <div class="row mb-4">
        <div class="col-md-8">
            <h2><i class="bi bi-journal-text me-2"></i>My Courses</h2>
            <p class="text-muted">List of courses enrolled</p>
        </div>
        <div class="col-md-4 text-end">
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left me-1"></i>Back
            </a>
        </div>
    </div>

    <!-- Filter -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <form method="get" asp-action="MyCourses">
                <div class="row g-3">
                    <div class="col-md-3">
                        <label class="form-label">Semester</label>
                        <select name="semester" class="form-select">
                            <option value="">-- All --</option>
                            @foreach (var semester in ViewBag.Semesters as List<string>)
                            {
                                <option value="@semester" selected="@(semester == ViewBag.SelectedSemester)">
                                    @semester
                                </option>
                            }
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Academic Year</label>
                        <select name="academicYear" class="form-select">
                            <option value="">-- All --</option>
                            @foreach (var year in ViewBag.AcademicYears as List<string>)
                            {
                                <option value="@year" selected="@(year == ViewBag.SelectedAcademicYear)">
                                    @year
                                </option>
                            }
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Status</label>
                        <select name="status" class="form-select">
                            <option value="">-- All --</option>
                            <option value="Enrolled" selected="@("Enrolled" == ViewBag.SelectedStatus)">Enrolled</option>
                            <option value="Completed" selected="@("Completed" == ViewBag.SelectedStatus)">Completed</option>
                            <option value="Dropped" selected="@("Dropped" == ViewBag.SelectedStatus)">Dropped</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">&nbsp;</label>
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary flex-fill">
                                <i class="bi bi-search me-1"></i>Filter
                            </button>
                            <a asp-action="MyCourses" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-clockwise"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Course List -->
    @if (Model != null && Model.Any())
    {
        <div class="row">
            @foreach (var enrollment in Model)
            {
                <div class="col-md-6 mb-4">
                    <div class="card h-100 shadow-sm hover-card">
                        <div class="card-header bg-white d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">@enrollment.Course.CourseName</h5>
                            @if (enrollment.Status == "Enrolled")
                            {
                                <span class="badge bg-primary">Enrolled</span>
                            }
                            else if (enrollment.Status == "Completed")
                            {
                                <span class="badge bg-success">Completed</span>
                            }
                            else if (enrollment.Status == "Dropped")
                            {
                                <span class="badge bg-danger">Dropped</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">@enrollment.Status</span>
                            }
                        </div>
                        <div class="card-body">
                            <div class="mb-3">
                                <p class="text-muted mb-2">
                                    <i class="bi bi-code-square me-1"></i>
                                    <strong>Course Code:</strong> @enrollment.Course.CourseCode
                                </p>
                                <p class="text-muted mb-2">
                                    <i class="bi bi-credit-card me-1"></i>
                                    <strong>Credits:</strong> @enrollment.Course.Credits
                                </p>
                                <p class="text-muted mb-2">
                                    <i class="bi bi-calendar3 me-1"></i>
                                    <strong>Semester:</strong> @enrollment.Semester @enrollment.AcademicYear
                                </p>
                                @if (enrollment.Course.Faculty != null)
                                {
                                    <p class="text-muted mb-2">
                                        <i class="bi bi-person me-1"></i>
                                        <strong>Faculty:</strong> @enrollment.Course.Faculty.User.FullName
                                    </p>
                                }
                                @if (!string.IsNullOrEmpty(enrollment.Course.Schedule))
                                {
                                    <p class="text-muted mb-2">
                                        <i class="bi bi-clock me-1"></i>
                                        <strong>Schedule:</strong> @enrollment.Course.Schedule
                                    </p>
                                }
                                @if (!string.IsNullOrEmpty(enrollment.Course.Room))
                                {
                                    <p class="text-muted mb-2">
                                        <i class="bi bi-geo-alt me-1"></i>
                                        <strong>Room:</strong> @enrollment.Course.Room
                                    </p>
                                }
                            </div>

                            <hr>

                            <div class="row text-center">
                                <div class="col-4">
                                    <div class="small text-muted">Midterm scores</div>
                                    <div class="fw-bold">
                                        @(enrollment.MidtermScore.HasValue ? enrollment.MidtermScore.Value.ToString("F1") : "---")
                                    </div>
                                </div>
                                <div class="col-4">
                                    <div class="small text-muted">Final scores</div>
                                    <div class="fw-bold">
                                        @(enrollment.FinalScore.HasValue ? enrollment.FinalScore.Value.ToString("F1") : "---")
                                    </div>
                                </div>
                                <div class="col-4">
                                    <div class="small text-muted">Attendance count</div>
                                    <div class="fw-bold">@enrollment.AttendanceCount</div>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer bg-white">
                            <a asp-action="CourseDetail" asp-route-id="@enrollment.EnrollmentID"
                               class="btn btn-sm btn-outline-primary w-100">
                                <i class="bi bi-eye me-1"></i>See details
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Summary -->
        <div class="card shadow-sm mt-4">
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-md-4">
                        <i class="bi bi-journal-text text-primary fs-1"></i>
                        <h4 class="mt-2">@Model.Count()</h4>
                        <p class="text-muted mb-0">Total courses</p>
                    </div>
                    <div class="col-md-4">
                        <i class="bi bi-check-circle text-success fs-1"></i>
                        <h4 class="mt-2">@Model.Count(e => e.Status == "Completed")</h4>
                        <p class="text-muted mb-0">Completed</p>
                    </div>
                    <div class="col-md-4">
                        <i class="bi bi-clock-history text-info fs-1"></i>
                        <h4 class="mt-2">@Model.Count(e => e.Status == "Enrolled")</h4>
                        <p class="text-muted mb-0">Enrolled</p>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="card shadow-sm">
            <div class="card-body text-center py-5">
                <i class="bi bi-inbox text-muted" style="font-size: 4rem;"></i>
                <h4 class="mt-3 text-muted">No courses found</h4>
                <p class="text-muted">You have not registered for any courses or no courses found matching the filter.</p>
                <a asp-action="MyCourses" class="btn btn-primary mt-3">
                    <i class="bi bi-arrow-clockwise me-1"></i>Clear filter
                </a>
            </div>
        </div>
    }
</div>

<style>
    .hover-card {
        transition: all 0.3s ease;
    }

    .hover-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
    }
</style>