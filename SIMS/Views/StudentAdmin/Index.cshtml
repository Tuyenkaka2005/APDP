@{
    ViewData["Title"] = "Quản lý Sinh viên";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary"><i class="fas fa-users"></i> Quản lý Sinh viên</h2>
        <a asp-action="Create" class="btn btn-success btn-lg">
            <i class="fas fa-plus"></i> Thêm sinh viên mới
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="fas fa-check-circle"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <form asp-action="Index" method="get" class="row g-3 mb-4">
        <div class="col-md-5">
            <input type="text" name="search" value="@ViewBag.Search" class="form-control" placeholder="Tìm theo mã, tên, email..." />
        </div>
        <div class="col-md-4">
            <select name="programId" class="form-select">
                <option value="">-- Tất cả chương trình --</option>
                @foreach (var p in ViewBag.Programs)
                {
                    <option value="@p.AcademicProgramId" selected="@(p.AcademicProgramId == ViewBag.AcademicProgramId)">@p.ProgramCode - @p.ProgramName</option>
                }
            </select>
        </div>
        <div class="col-md-3">
            <button type="submit" class="btn btn-primary w-100">
                <i class="fas fa-search"></i> Tìm kiếm
            </button>
        </div>
    </form>

    <div class="table-responsive">
        <table class="table table-hover table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Mã SV</th>
                    <th>Họ tên</th>
                    <th>Email</th>
                    <th>Số điện thoại</th>
                    <th>Chương trình</th>
                    <th>Ngày nhập học</th>
                    <th>GPA</th>
                    <th>Hành động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var s in Model)
                {
                    <tr>
                        <td><strong class="text-primary">@s.StudentCode</strong></td>
                        <td>@s.FullName</td>
                        <td>@s.User?.Email</td>
                        <td>@s.User?.PhoneNumber</td>
                        <td>@(s.AcademicProgram?.ProgramName ?? "Chưa chọn")</td>
                        <td>@s.AdmissionDate.ToString("dd/MM/yyyy")</td>
                        <td><span class="badge bg-info">@s.GPA.ToString("F2")</span></td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@s.StudentId" class="btn btn-sm btn-warning">
                                <i class="fas fa-edit"></i> Sửa
                            </a>
                            <a asp-action="Details" asp-route-id="@s.StudentId" class="btn btn-sm btn-info">
                                <i class="fas fa-eye"></i> Xem
                            </a>
                            <form asp-action="Delete" asp-route-id="@s.StudentId" method="post" style="display:inline;">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Xóa sinh viên @s.StudentCode?')">
                                    <i class="fas fa-trash"></i> Xóa
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
